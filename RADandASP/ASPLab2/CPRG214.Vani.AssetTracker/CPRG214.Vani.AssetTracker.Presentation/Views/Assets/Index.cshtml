@model IEnumerable<CPRG214.Vani.AssetTracker.Presentation.Models.AssetViewModel>

@{
    ViewData["Title"] = "Assets List";
}

<h3>List of Assets</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.TagNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetType)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.TagNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetType)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id}) |
                @Html.ActionLink("Details", "Details", new { id=item.Id  }) 
            </td>
        </tr>
}
    </tbody>
</table>
